<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.shopListService.shop.repository.ShopPostMapper">
    <select id="getShop" resultType="shopD">


    </select>

    <select id="getShopGrade" resultType="ShopDto">
        select * from
        shop s join (select shopId, avg(rate) as grade from review group by shopId) r where s.id = r.shopId
    </select>
</mapper>